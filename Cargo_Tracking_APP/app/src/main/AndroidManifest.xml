<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cargo_app_3">

    <!-- İnternet erişim izni -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cargo_App_3">

        <activity
            android:name=".ui.theme.ercancam.cargotracking.ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.theme.ercancam.cargotracking.shipments.OrdersActivity" />
        <activity android:name=".ui.theme.ercancam.cargotracking.shipments.OrderDetailActivity" />
        <activity android:name=".ui.theme.ercancam.cargotracking.shipments.QrCodeActivity" />

    </application>

</manifest>
